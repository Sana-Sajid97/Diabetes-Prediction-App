import streamlit as st
import joblib  # Used to load ML models

st.title("Diabetes Prediction App")  # App title

# Safely load the model
try:
    model = joblib.load('diabetes_model.pkl')  # Load your model
    st.success("Model loaded successfully! âœ…")
except FileNotFoundError:
    st.error("Model file not found. Please make sure 'diabetes_model.pkl' is in this folder.")
except Exception as e:
    st.error(f"Error loading model: {e}")

# User input for prediction
st.subheader("Enter your details for prediction")

try:
    # Example inputs for prediction (adjust based on your model features)
    age = st.number_input("Age", min_value=1, max_value=120, value=30)
    bmi = st.number_input("BMI", min_value=0.0, max_value=100.0, value=25.0)

    if st.button("Predict"):
        # Example: model expects [[age, bmi]]
        prediction = model.predict([[age, bmi]])
        st.write(f"Predicted result: {prediction[0]}")
except Exception as e:
    st.error(f"Prediction error: {e}")


